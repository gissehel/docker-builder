.PHONY:none
none:
	echo "nothing to do..."

.PHONY:all

.PHONY:clean
clean:
	rm -rf *.local-image
	rm -rf *.remote-image

%.local-image: %/*
	bash -c 'NAME="$${0%.local-image}"; cd "$${NAME}"; docker build --no-cache --force-rm --build-arg VCS_REF=`git rev-parse --short HEAD` --build-arg BUILD_DATE=`date -u +”%Y-%m-%dT%H:%M:%SZ”` -t local-$${NAME} .' "$@" && touch "$@"


